<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Фон с фоновым цветом (менее прозрачный) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor" /> <!-- черный с альфа 80% (CC) -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Внешний градиент -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/glass1"
                android:endColor="@color/glass2"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Полупрозрачный внутренний слой -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass3" />
            <corners android:radius="22dp" />
        </shape>
    </item>

</layer-list>
